<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.colordiaryexample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".EmotionSave"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GraphActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".StatisticsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PopupAgeActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".MemberChangeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MemberDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DiaryShareDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChangeUpdateActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PopupActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PasswordResetActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MemberInitActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddDiaryActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DiaryDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShareActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoadingActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>